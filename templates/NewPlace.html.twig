{% extends 'adminbase.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-center mb-4">
        <a class="btn btn-outline-dark" href="{{ path('event-list') }}"><i class="bi bi-arrow-return-left"></i> &nbsp; Back</a>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <div class="card px-5 py-5">
                {{ form(form) }}
                {% if form.vars.value.id is not null %}
                    <form action="{{ path('delete_place', {'id': form.vars.value.id}) }}" method="post" onsubmit="return confirm('Vážně chcete smazat toto místo?');">
                        <button type="submit" class="btn btn-danger w-100 mt-3">Delete Place</button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
